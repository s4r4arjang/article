 @model AtrinCode.Core.Domain.DTOs.Articles.EditCategoryDTO

@{
    ViewData["Title"] = " ویرایش دسته بندی";
}


<div class="content-wrapper">
          <div class="page-header">
            <h3 class="page-title">
              ویرایش دسته بندی
            </h3>
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="index" asp-controller="Category">  دسته بندی</a></li>
                <li class="breadcrumb-item active" aria-current="page">ویرایش دسته بندی</li>
              </ol>
            </nav>
          </div>
          <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">دسته بندی </h4>
                    <form class="forms-sample" method="post" asp-action="Edit" asp-controller="Category">
                   
                         <div class="form-group" hidden>
                         <label asp-for="Id" class="control-label"></label>
                         <input asp-for="Id" class="form-control" />
                         <span asp-validation-for="Id" class="text-danger"></span>
                         </div>

                        <div class="form-group">
                            <label asp-for="Title"></label>
                            <input type="text" class="form-control" asp-for="Title" style="width: 500px;">
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                      
                      

                
                        <button type="submit" class="btn btn-primary mr-2">ثبت</button>
                        <a asp-action="index" asp-controller="Category" class="btn btn-light">بازگشت</a>
                    </form>
                </div>
            </div>
        </div>
          </div>
        </div>

