
@model AtrinCode.Core.Domain.DTOs.Articles.DisplayArticleDetailsDTO
@{
    ViewData["Title"] = "جزئیات مقاله";
}
<div class="main-panel">
        <div class="content-wrapper">
          <div class="page-header">
            <h3 class="page-title">
              اخبار
              <a class="btn btn-info d-block mt-3" asp-action="Index" asp-controller="Article">بازگشت</a>
            </h3>
            
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item">مقاله</li>
                <li class="breadcrumb-item active" aria-current="page">نمایش جزئیات مقاله</li>
              </ol>
            </nav>
          </div>
          
            <div class="card">
              <div class="card-body"> <div class="col col-md-12">
                  <div class="card-columns">
                 <div class="col col-md-12 ">
                   <img class="card-img-top img-fluid" src="~/ArticleImages/@Model.ArticleImage" alt="@Model.Title" >
                   </div>
                   </div>
                  <div class="card-title mt-5">
                  @Html.DisplayFor(m=>m.ShortDescription)
                  </div>
                  <div class="card-body">
                 @Html.Raw(Model.Content ) 
                </div>
              </div>
            </div>
            
          </div>
      
        <!-- content-wrapper ends -->
